{% extends 'base.html.twig' %}

{% block title %}Todo index{% endblock %}

{% block body %}
    <h1>Todo index</h1>

 <button class="btn">{{ button_label|default('Filtrer') }}</button>
 {{ form_end(form ) }}
    <table class="table">
        <thead>
            <tr>
                <th><a href='/todo?order={{order}}'>Id</a></th>
                <th><a href='/todo?order={{order}}'>Name</a></th>
                <th><a href='/todo?order={{order}}'>Description</a></th>
                <th><a href='/todo?order={{order}}'>Etat</a></th>
                <th><a href='/todo?order={{order}}'>Actions</a></th>
            </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
            <tr>
                <td>{{ todo.id }}</td>
                <td>{{ todo.name }}</td>
                <td>{{ todo.Description }}</td>
                <td class="elem">
                {% if todo.done == 1 %}
                Fait
                {% else %}
                A Faire
                {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_todo_show', {'id': todo.id}) }}">show</a>
                    <a href="{{ path('app_todo_edit', {'id': todo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_todo_new') }}">Create new</a>
{% endblock %}
